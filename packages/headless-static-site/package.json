{
  "name": "iiif-hss",
  "version": "1.0.6-next.2",
  "description": "IIIF Headless Static Site",
  "type": "module",
  "keywords": [],
  "files": ["src", "build", "lib"],
  "main": "lib/scripts.js",
  "module": "lib/scripts.js",
  "bin": {
    "iiif-hss": "build/index.js",
    "iiif-hss-dev": "build/server/entrypoint.js"
  },
  "author": "Stephen Fraser <stephen.fraser@digirati.com>",
  "license": "MIT",
  "typings": "lib/scripts.d.ts",
  "scripts": {
    "vite": "vite",
    "dev-server": "bun run ./src/entrypoint.ts",
    "dev-cli": "bun run ./src/index.ts",
    "build": "pnpm run build:cli && pnpm run build:server && pnpm run build:client && pnpm run build:node-client && pnpm run build:library && pnpm run build:vite-plugin && pnpm run build:astro-integration && pnpm run build:astro-server-lib && pnpm run build:astro-client-lib && pnpm run build:dev-ui",
    "build:cli": "tsup-node src/index.ts --no-splitting --outDir build --format esm --env.NODE_ENV production",
    "build:server": "tsup-node src/entrypoint.ts --no-splitting --outDir build/server --format esm --env.NODE_ENV production",
    "build:library": "tsup src/library.ts --outDir build",
    "build:vite-plugin": "tsup src/vite-plugin.ts --outDir build",
    "build:astro-integration": "tsup src/astro-integration.ts --outDir build",
    "build:astro-server-lib": "tsup src/astro/server.ts --outDir build/astro",
    "build:astro-client-lib": "tsup src/astro/client.ts --outDir build/astro",
    "build:dev-ui": "pnpm vite build --config src/dev-server-ui/vite.config.ts || echo 'Skipping dev UI build (install react/react-dom to enable)'",
    "build:client": "tsup src/dev/client.ts --outDir build",
    "build:node-client": "tsup src/dev/node-client.ts --outDir build",
    "lint": "publint",
    "test": "vitest",
    "prepack": "pnpm run build"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./lib/scripts.d.ts",
        "default": "./lib/scripts.js"
      }
    },
    "./library": {
      "import": {
        "types": "./build/library.d.ts",
        "default": "./build/library.js"
      }
    },
    "./client": {
      "import": {
        "types": "./build/client.d.ts",
        "default": "./build/client.js"
      },
      "require": "./build/client.js"
    },
    "./node-client": {
      "import": {
        "types": "./build/node-client.d.ts",
        "default": "./build/node-client.js"
      }
    },
    "./vite-plugin": {
      "import": {
        "types": "./build/vite-plugin.d.ts",
        "default": "./build/vite-plugin.js"
      }
    },
    "./astro": {
      "import": {
        "types": "./build/astro-integration.d.ts",
        "default": "./build/astro-integration.js"
      }
    },
    "./astro/server": {
      "import": {
        "types": "./build/astro/server.d.ts",
        "default": "./build/astro/server.js"
      }
    },
    "./astro/client": {
      "import": {
        "types": "./build/astro/client.d.ts",
        "default": "./build/astro/client.js"
      }
    }
  },
  "typesVersions": {
    "*": {
      "*": ["lib/scripts.d.ts"],
      "client": ["build/client.d.ts"],
      "astro": ["build/astro-integration.d.ts"],
      "astro/server": ["build/astro/server.d.ts"],
      "astro/client": ["build/astro/client.d.ts"]
    }
  },
  "optionalDependencies": {
    "@iiif/presentation-3": "^2.1.3"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/node-ws": "^1.0.5",
    "@hono/zod-validator": "^0.4.1",
    "@iiif/builder": "^2.0.1",
    "@iiif/helpers": "^1.5.4",
    "@iiif/parser": "^2.2.5",
    "@rgrove/parse-xml": "^4.2.0",
    "cli-progress": "^3.12.0",
    "commander": "^13.0.0",
    "detect-python-interpreter": "^1.0.0",
    "dotenv": "^17.2.3",
    "fs-extra": "^11.1.1",
    "hono": "^4.6.16",
    "js-yaml": "^4.1.0",
    "keyword-extractor": "^0.0.28",
    "micromatch": "^4.0.5",
    "mitt": "^3.0.1",
    "object-hash": "^3.0.0",
    "p-queue": "^8.0.1",
    "pdiiif": "^0.1.9",
    "slug": "^8.2.3",
    "sqlite": "^5.1.1",
    "translate": "^3.0.0",
    "typesense": "1.7.2",
    "unionfs": "^4.5.4",
    "yaml": "^2.6.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@atlas-viewer/iiif-image-api": "^2.1.1",
    "@biomejs/biome": "1.9.4",
    "@iiif/presentation-3": "^2.1.3",
    "@inquirer/prompts": "^3.1.2",
    "@tailwindcss/vite": "^4.2.1",
    "@types/chalk": "^2.2.4",
    "@types/cli-progress": "^3.11.3",
    "@types/fs-extra": "^11.0.1",
    "@types/js-yaml": "^4.0.6",
    "@types/micromatch": "^4.0.2",
    "@types/node": "^20.5.9",
    "@types/object-hash": "^3.0.4",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/slug": "^5.0.5",
    "bun-types": "^1.0.1",
    "chalk": "^5.6.2",
    "prettier": "^3.2.5",
    "publint": "^0.2.12",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-iiif-vault": "2.0.5",
    "react-lazy-load-image-component": "^1.6.3",
    "tailwindcss": "^4.2.1",
    "tslib": "^2.6.2",
    "tsup": "^8.3.5",
    "typescript": "^5.2.2",
    "vite": "^6.0.7",
    "vitest": "^2.1.8"
  }
}

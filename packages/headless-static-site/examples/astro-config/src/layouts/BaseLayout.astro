---
const { title = "IIIF + Astro" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <style>
      :root {
        --bg: #f4f7f8;
        --card: #ffffff;
        --ink: #102020;
        --muted: #4f6363;
        --line: #d8e2e2;
        --link: #0b6b73;
      }

      * { box-sizing: border-box; }

      body {
        margin: 0;
        font-family: "Avenir Next", "Segoe UI", sans-serif;
        color: var(--ink);
        background: radial-gradient(circle at 20% 10%, #ffffff 0%, var(--bg) 60%);
      }

      main {
        max-width: 980px;
        margin: 0 auto;
        padding: 2rem 1rem 4rem;
      }

      a { color: var(--link); }

      .panel {
        background: var(--card);
        border: 1px solid var(--line);
        border-radius: 12px;
        padding: 1rem;
      }

      .stack { display: grid; gap: 1rem; }

      .items {
        list-style: none;
        margin: 0;
        padding: 0;
        display: grid;
        gap: 0.75rem;
      }

      .item {
        border: 1px solid var(--line);
        border-radius: 10px;
        background: #fff;
        padding: 0.75rem;
      }

      .small { color: var(--muted); font-size: 0.925rem; }

      pre {
        margin: 0;
        overflow: auto;
        border-radius: 10px;
        border: 1px solid var(--line);
        padding: 0.75rem;
        background: #fbfdfd;
      }
    </style>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>

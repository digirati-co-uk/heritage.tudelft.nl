{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.example.org/iiif-hss/iiif-hss.store.schema.json",
  "$comment": "Replace the placeholder host/path in $id when you publish this schema.",
  "title": "IIIF HSS Store Config",
  "description": "Schema for iiif-config/stores/*.json and iiif-config/stores/*/_store.json.",
  "oneOf": [
    { "$ref": "#/$defs/iiifJsonStore" },
    { "$ref": "#/$defs/iiifRemoteStore" }
  ],
  "$defs": {
    "stringArray": {
      "type": "array",
      "items": { "type": "string" }
    },
    "ignoreValue": {
      "oneOf": [{ "type": "string" }, { "$ref": "#/$defs/stringArray" }]
    },
    "storeMetadata": {
      "type": "object",
      "additionalProperties": false,
      "required": ["label"],
      "properties": {
        "label": { "type": "string" },
        "description": { "type": "string" }
      }
    },
    "iiifJsonStore": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "path"],
      "properties": {
        "$schema": { "type": "string", "format": "uri" },
        "type": { "const": "iiif-json" },
        "path": { "type": "string", "minLength": 1 },
        "pattern": { "type": "string" },
        "ignore": { "$ref": "#/$defs/ignoreValue" },
        "subFiles": { "type": "boolean" },
        "base": { "type": "string" },
        "destination": { "type": "string" },
        "options": { "type": "object", "additionalProperties": true },
        "metadata": { "$ref": "#/$defs/storeMetadata" },
        "slugTemplate": {
          "oneOf": [
            { "$ref": "#/$defs/slugConfig" },
            {
              "type": "array",
              "minItems": 1,
              "items": { "$ref": "#/$defs/slugConfig" }
            }
          ]
        },
        "slugTemplates": { "$ref": "#/$defs/stringArray" },
        "skip": { "$ref": "#/$defs/stringArray" },
        "run": { "$ref": "#/$defs/stringArray" },
        "config": { "type": "object", "additionalProperties": true }
      }
    },
    "iiifRemoteStore": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type"],
      "anyOf": [{ "required": ["url"] }, { "required": ["urls"] }],
      "properties": {
        "$schema": { "type": "string", "format": "uri" },
        "type": { "const": "iiif-remote" },
        "url": { "type": "string", "format": "uri" },
        "urls": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "format": "uri" }
        },
        "overrides": { "type": "string" },
        "saveManifests": { "type": "boolean" },
        "options": { "type": "object", "additionalProperties": true },
        "metadata": { "$ref": "#/$defs/storeMetadata" },
        "slugTemplate": {
          "oneOf": [
            { "$ref": "#/$defs/slugConfig" },
            {
              "type": "array",
              "minItems": 1,
              "items": { "$ref": "#/$defs/slugConfig" }
            }
          ]
        },
        "slugTemplates": { "$ref": "#/$defs/stringArray" },
        "skip": { "$ref": "#/$defs/stringArray" },
        "run": { "$ref": "#/$defs/stringArray" },
        "config": { "type": "object", "additionalProperties": true },
        "destination": { "type": "string" }
      }
    },
    "slugConfig": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "domain"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["Manifest", "Collection"]
        },
        "domain": { "type": "string", "minLength": 1 },
        "prefix": { "type": "string" },
        "suffix": { "type": "string" },
        "examples": {
          "type": "array",
          "items": { "type": "string", "format": "uri" }
        },
        "protocol": {
          "type": "string",
          "enum": ["http", "https"]
        },
        "pathSeparator": { "type": "string" },
        "addedPrefix": { "type": "string" }
      }
    }
  }
}

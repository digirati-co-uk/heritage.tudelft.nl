{
  "name": "@repo/iiif",
  "version": "1.0.0",
  "type": "module",
  "main": "./index.js",
  "exports": {
    "./build/*": "./.iiif/build/*"
  },
  "scripts": {
    "build": "iiif-hss build --scripts ./scripts",
    "search:index": "iiif-hss index --iiif-build-dir=./.iiif/build",
    "dev": "IIIF_URL=http://localhost:7111 bun exec iiif-hss-dev"
  },
  "dependencies": {
    "@iiif/helpers": "^1.2.19",
    "iiif-hss": "workspace:*",
    "yaml": "^2.7.0"
  }
}

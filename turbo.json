{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["build-iiif", "^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "build-iiif": {
      "inputs": ["iiif/**"],
      "outputs": [".iiif/**", "public/iiif/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build-iiif"]
    }
  }
}
